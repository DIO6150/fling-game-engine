{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C (windows)",
            "command": "C:\\Users\\maele\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                
                "-Wall",

                "-g",

                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/vendor/glad/glad.c",
                "${workspaceFolder}/vendor/stb_image/stb_image.c",
                
                "-I${workspaceFolder}/includes",
                "-I${workspaceFolder}/vendor",

                "-L${workspaceFolder}/libs/windows",
                "-lm",
                "-lglfw3",
                "-lgdi32",
                
                "-o",
                "${workspaceFolder}/bin/EngineTest",
                
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },

        {
            "type": "cppbuild",
            "label": "C (linux)",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                
                "-Wall",

                "-g",

                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/vendor/glad/glad.c",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/vendor/stb_image/stb_image.c",
                
                "-I${workspaceFolder}/includes",
                "-I${workspaceFolder}/vendor",

                "-L${workspaceFolder}/libs/linux",
                {
                    "value" : "$(env PKG_CONFIG_PATH=\"${workspaceFolder}/libs/linux\"$PKG_CONFIG_PATH pkg-config --cflags glfw3)",
                    "quoting": "weak"
                },
                {
                    "value": "$(env PKG_CONFIG_PATH=\"${workspaceFolder}/libs/linux\"$PKG_CONFIG_PATH pkg-config --static --libs glfw3)",
                    "quoting": "weak"
                },
                "-lm",
                "-lglfw3",
                
                "-o",
                "${workspaceFolder}/bin/EngineTest",
                
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
