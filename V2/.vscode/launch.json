    "version": "0.2.0",
    "configurations":
    [
        {
            "name": "C Launch (Linux)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/EngineTest",
            "externalConsole": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            }
        },
        {
            "name": "C Launch (Windows)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/EngineTest.exe",
            "externalConsole": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "C:\\Users\\maele\\mingw64\\bin\\gdb.exe"
            }
        }
    ]
}